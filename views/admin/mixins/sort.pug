mixin formSort(type)
  div(sort) 
    .d-inline-flex.align-items-center
      select(class="form-control" name="type" sort-select)
        - if(type === 'account')
            option(value="permission-asc") Quyền cao - thấp
            option(value="permission-desc") Quyền thấp - cao
        - if(type === 'category')
            option(value="tree-asc") Phân cấp 
        - if(type === 'category' || type === 'products' || type === 'news')
            option(value="position-desc") Vị trí giảm dần
            option(value="position-asc") Vị trí tăng dần
        - if(type === 'product')
            option(value="price-desc") Giá giảm dần
            option(value="price-asc") Giá tăng dần
        option(value="title-asc") Tiêu đề A - Z
        option(value="title-desc") Tiêu đề Z - A
      button(class="btn btn-danger btn-apdung" sort-clear) Clear