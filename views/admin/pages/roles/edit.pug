extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
  +alert-error(3000)
  - if(roles.permissions.includes(`roles-edit`))
      h2 Chỉnh sửa nhóm quyền
      form(
        action=`${prefixAdmin}/roles/edit/${record._id}?_method=PATCH` 
        method="POST" 
        autocomplete
      )
        .form-group
          label(for="title") Tiêu đề
          input(
            type="text" 
            class="form-control" 
            name="title" 
            id="title"
            required
            value= record.title
          )
        .form-group
          label(for="description") Mô tả
          textarea(
            class="form-control" 
            name="description" 
            id="description"
          ) #{record.description}
        button(class="btn btn-primary" type="submit") Chỉnh sửa
  - else 
      h2 Bạn không có quyền