extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
  +alert-error(3000)
  - if(roles.permissions.includes(`roles-create`))
      h2 Tạo mới nhóm quyền
      form(
        action=`${prefixAdmin}/roles/create` 
        method="POST" 
        autocomplete
      )
        .form-group
          label(for="title") Tiêu đề
          input(
            type="text" 
            class="form-control" 
            name="title" 
            id="title"
            required
          )
        .form-group
          label(for="description") Mô tả
          textarea(
            class="form-control" 
            name="description" 
            id="description"
          )
        button(class="btn btn-primary" type="submit") Tạo mới
  - else 
      h2 Bạn không có quyền