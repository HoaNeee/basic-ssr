extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(3000)
  
  h2 Tạo mới sản phẩm
  form(
    action="/admin/products/create" 
    method="POST" 
    enctype="multipart/form-data"
  )
    .form-group
      label(for="title") Tiêu đề
      input(
        type="text" 
        class="form-control" 
        name="title" 
        id="title"
        required
      )
    
    .form-group
      label(for="desc") Mô tả
      textarea(
        class="form-control" 
        name="description" 
        id="desc"
        rows=4
      )
    .form-group
      label(for="price") Giá
      input(
        type="number"
        min="0"
        class="form-control" 
        name="price" 
        id="price"
        value=0
      )
    .form-group
      label(for="discount") % Giảm giá
      input(
        type="number"
        min="0"
        class="form-control" 
        name="discountPercentage" 
        id="discount"
        value=0
      )
    .form-group
      label(for="stock") Số lượng
      input(
        type="number"
        min="0"
        class="form-control" 
        name="stock" 
        id="stock"
        value=0
      )
    .form-group
      label(for="thumb") Hình ảnh
      input(
        type="file"
        min="0"
        class="form-control-file" 
        name="thumbnail" 
        id="thumb"
        accept="image/*"
        input-preview-image
      )

      div(class="img-container")
        img(src="", alt="" image-preview)
        div(class="remove-image")
          span X 
      

    .form-group
      label(for="pos") Vị trí
      input(
        type="number"
        min="0"
        class="form-control" 
        name="position" 
        id="pos"
      )
    
    .my-2 
      .form-check 
        input(type="radio" name="status" id="statusActive" value="active" checked)
        label(for="statusActive" class="form-check-label") Hoạt động
      .form-check 
        input(type="radio" name="status" id="statusInactive" value="inactive" )
        label(for="statusInactive" class="form-check-label") Dừng hoạt động
    
    button(class="btn btn-primary" type="submit") Tạo mới