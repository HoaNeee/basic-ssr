extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main 
  h1 Danh mục sản phẩm

  .card 
    .card-header 
      p Options 
    .card-body 
      a(class="btn btn-outline-success" href=`${prefixAdmin}/products-category/create`) + Thêm mới
    
  
  table(
    class="table table-hover mt-4"
  ) 
    thead 
      tr  
        th 
          input(type="checkbox" name="checkAll")
        th STT
        th Hình ảnh
        th Tiêu đề
        th Vị trí
        th Trạng thái 
        th Hành động 
       
    tbody 
      +table-tree(records)