extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
  +alert-error(3000)
  - if(roles.permissions.includes(`news-create`))
      h2 Tạo mới bài viết
      form(
        action=`${prefixAdmin}/news/create` 
        method="POST" 
        autocomplete
      )
        .form-group
          label(for="title") Tiêu đề
          input(
            type="text" 
            class="form-control" 
            name="title" 
            id="title"
            required
          )
        .form-group
          label(for="description") Mô tả ngắn
          textarea(
            class="form-control textarea-mce" 
            name="description" 
            id="description"
          )
        .form-group
          label(for="content") Nội dung bài viết
          textarea(
            class="form-control textarea-mce" 
            name="content" 
            id="content"
          )

        .form-group
          label(for="pos") Vị trí
          input(
            type="number"
            min="0"
            placeholder="Tự động tăng..."
            class="form-control" 
            name="position" 
            id="pos"
          )
        button(class="btn btn-primary" type="submit") Tạo mới
  - else 
      h2 Bạn không có quyền